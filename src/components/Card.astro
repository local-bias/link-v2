---
type Props = {
  href: string;
  title: string;
  description?: string;
  thin?: boolean;
};

const { href, title, description, thin } = Astro.props;
---

<a href={href} target="_blank" rel="noreferrer" class={`root ${thin ? 'thin' : ''}`}>
  <div>
    <div class="title">{title}</div>
    {!!description && <div class="description">{description}</div>}
  </div>
  <div class="icon">
    <div>
      <slot />
    </div>
  </div>
</a>
<style>
  .root {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.05), 0 1px 2px rgba(0, 0, 0, 0.1);
    border-radius: 0.375rem;
    overflow: hidden;
    background-color: #fff;
    padding-top: 1.5rem;
    padding-bottom: 1rem;
    padding-left: 1rem;
    padding-right: 1rem;
    transition: all 0.2s ease-in-out;
  }
  .root:hover {
    box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.05), 0 5px 10px rgba(0, 0, 0, 0.1);
  }
  .root:before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 2px;
    background-image: linear-gradient(to right, var(--gradient-main));
  }
  .thin {
    margin-bottom: 0;
  }

  .title {
    font-weight: 600;
    font-size: 0.875rem;
    line-height: 1.25rem;
    color: #4b5563;
  }
  .description {
    font-size: 0.75rem;
    line-height: 1rem;
    color: #6b7280;
  }
  .icon {
    display: flex;
    justify-content: flex-end;
  }
  .icon div {
    position: relative;
  }
  .icon div:before {
    content: '';
    position: absolute;
    right: 0;
    bottom: 0;
    width: 80%;
    height: 50%;
    border-radius: 50%;
    background-image: linear-gradient(to right, var(--gradient-main));
    filter: blur(12px);
    opacity: 0.4;
  }

  @media (min-width: 768px) {
    .root {
      padding-top: 2rem;
      padding-bottom: 1.5rem;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
    .title {
      font-size: 1.125rem;
      line-height: 1.75rem;
    }
    .description {
      font-size: 0.875rem;
      line-height: 1.25rem;
    }
  }
</style>
